{
  "name": "partsbooking",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "exceljs": "^4.4.0",
    "puppeteer": "^24.16.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.partsbooking.app",
    "productName": "PartsBooking",
    "files": [
      "**/*",
      "!node_modules/.bin",
      "!**/*.map",
      "!**/logs.txt",
      "!**/logs/**/*.log"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
